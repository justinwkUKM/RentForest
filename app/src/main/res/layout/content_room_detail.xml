<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.yeefang.rentforest.RoomDetailActivity"
    tools:showIn="@layout/activity_room_detail">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:id="@+id/img_room"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/room_detail_img"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_below="@+id/img_room">

        <LinearLayout
            android:id="@+id/title_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name"
                android:textSize="@dimen/big_title_text"
                android:text="Prima Stapak Landed House ABC"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:id="@+id/tv_price_formatted"
                android:textSize="24dp"
                android:text="RM1000"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                />

            <TextView
                android:id="@+id/tv_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kim"
                android:textSize="@dimen/secondary_title_text"
                android:textStyle="italic"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_property_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Double Storey House"
            android:textSize="@dimen/secondary_title_text"
            android:textStyle="italic|bold"/>

        <TextView
            android:id="@+id/tv_public_address"
            android:layout_height="wrap_content"
            android:text="Taman Maju Jaya, Lorong 12"
            android:textSize="@dimen/secondary_title_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_row"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textSize="@dimen/title_text"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_description"
                android:textSize="@dimen/text"
                android:text="Prima Stapak Condo"
                android:layout_marginBottom="12dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/house_rules"
                android:textSize="@dimen/title_text"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_house_rules"
                android:textSize="@dimen/text"
                android:text="Prima Stapak Condo"
                android:layout_marginBottom="12dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/summary"
                android:textSize="@dimen/title_text"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_summary"
                android:textSize="@dimen/text"
                android:text="Prima Stapak Condo"
                android:layout_marginBottom="12dp"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
